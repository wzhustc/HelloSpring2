<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">
 
<!-- 表示允许使用注解形式进行自动装配 -->
	<context:annotation-config />
	
	<bean id="student1" class="com.springtutorial.annotation.Student">
		<property name="age" value="11" />
		<property name="name" value="11vivi" />
	</bean> 
	
	<bean id="student2" class="com.springtutorial.annotation.Student">
		<property name="age" value="14" />
		<property name="name" value="14helloworld"></property>
	</bean>

	<bean id="textEditor" class="com.springtutorial.annotation.TextEditor">
	</bean>
	
    <!-- Definition for spellChecker bean -->
   <bean id="spellChecker" class="com.springtutorial.annotation.SpellChecker">
   </bean>    
   
   <bean id="profile" class="com.springtutorial.annotation.Profile">
   </bean>
</beans>